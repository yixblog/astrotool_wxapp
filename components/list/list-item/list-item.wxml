<view
	class="am-list-item am-list-{{align}} {{multipleLine ? 'am-list-multiple' : ''}} {{last ? 'last': ''}} {{className}}"
	hover-class="{{disabled ? '' : 'am-list-item-hover'}}"
	bindtap="onItemTap"
	data-index="{{index}}"
>
	<view wx:if="{{$slots.prefix}}" class="am-list-prefix">
		<slot name="prefix"/>
	</view>
	<image wx:if="{{thumb}}" class="am-list-thumb" src="{{thumb}}" mode="scaleToFill" />
	<view class="am-list-line {{wrap ? 'am-list-wrap' : ''}}">
		<view class="am-list-content">
			<slot />
		</view>
		<view wx:if="{{$slots.extra}}" class="am-list-extra" >
			<slot name="extra" />
		</view>
		<view wx:if="{{arrow}}" class="am-list-arrow" />
		<view class="am-list-line-bottom" />
	</view>
</view>
